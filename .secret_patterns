# Secret Scan Configuration

# Patterns to block (regex)
# Matches common API keys, tokens, and secrets
patterns = [
    "(?i)(api[_-]?key|auth[_-]?token|secret|password|passwd|pwd)[ \t]*[:=][ \t]*[\"']?[a-zA-Z0-9_\-]{8,}[\"']?",
    "(?i)(ghp|gho|glpat|sk-)[a-zA-Z0-9_\-]{20,}",
    "(?i)bearer[ \t]+[a-zA-Z0-9\-\._~+/]+=*"
]

# Files/Paths to ignore (already in .gitignore, but for double safety)
exclude_paths = [
    "node_modules",
    ".env",
    "*.log",
    "*.lock"
]
